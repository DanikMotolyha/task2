<?xml version="1.0" encoding="utf-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">


<!-- definition of simple elements -->
<xs:element name="Thema" >
    <xs:simpleType>
        <xs:restriction base="xs:string">
            <xs:enumeration value="городской пейзаж"/>
            <xs:enumeration value="природа"/>
            <xs:enumeration value="люди"/>
            <xs:enumeration value="религия"/>
            <xs:enumeration value="спорт"/>
            <xs:enumeration value="архитектура"/>
        </xs:restriction>
    </xs:simpleType>
</xs:element>

<xs:element name="Country" type="xs:string"/>

<xs:element name="Valuable">
    <xs:simpleType>
        <xs:restriction base="xs:string">
            <xs:enumeration value="тематическая"/>
            <xs:enumeration value="коллекционная"/>
            <xs:enumeration value="историческая"/>
        </xs:restriction>
    </xs:simpleType>
</xs:element>

<!-- definition of attributes -->
<xs:attribute name="id">        <!--  use="required" -->
    <xs:simpleType>
            <xs:restriction base="xs:ID">
                <xs:pattern value="Card\d{3}"/>
            </xs:restriction>
        </xs:simpleType>
</xs:attribute>

<xs:attribute name="name">
    <xs:simpleType>
        <xs:restriction base = "xs:string">
            <xs:enumeration value="поздравительная"/>
            <xs:enumeration value="обычная"/>
            <xs:enumeration value="рекламная"/>
        </xs:restriction>
    </xs:simpleType>
</xs:attribute>

<xs:attribute name="send" type="xs:boolean"/>
<!-- definition of complex elements -->
<xs:element name = "Type">
    <xs:complexType>
        <xs:attribute ref="name" default="обычная"/>
        <xs:attribute ref="send" default="false"/>
    </xs:complexType>
</xs:element>

 
<xs:element name="Authors">     <!--  minOccurs="0" maxOccurs="5" -->
    <xs:complexType>
        <xs:sequence>
            <xs:element name="Author" minOccurs="1" maxOccurs="5">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="name" type="xs:string"/>
                        <xs:element name="serName" type="xs:string"/>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
</xs:element>


<xs:element name ="Card">
    <xs:complexType>
        <xs:sequence>
            <xs:element ref="Thema"/>
            <xs:element ref="Type" minOccurs="0"/>
            <xs:element ref="Country"/>
            <xs:element name = "Date" type="xs:date"/>
            <xs:element ref="Authors" minOccurs="0" maxOccurs="5"/>
            <xs:element ref="Valuable"/>
        </xs:sequence>
        <xs:attribute ref="id" use="required"/>
    </xs:complexType>
</xs:element>


<xs:element name ="OLD_CARDS">
    <xs:complexType>
        <xs:sequence>
            <xs:element ref="Card" minOccurs="1" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>
</xs:element>

</xs:schema>